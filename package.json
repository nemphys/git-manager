{
  "name": "git-manager",
  "displayName": "GIT manager for VS Code",
  "description": "A VSCode plugin to manage git commits in a similar manner to Jetbrains IDEs",
  "version": "0.0.1",
  "publisher": "nemphys",
  "icon": "resources/commit-manager-logo.png",
  "repository": {
    "url": "https://github.com/nemphys/git-manager.git"
  },
  "license": "MIT",
  "keywords": [
    "git",
    "commit",
    "changelist",
    "jetbrains",
    "intellij",
    "scm",
    "vcs"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onView:git-manager.changelists",
    "workspaceContains:.git",
    "onCommand:git-manager.openCommitManager",
    "onCommand:git-manager.test",
    "onCommand:git-manager.createChangelist",
    "onCommand:git-manager.deleteChangelist",
    "onCommand:git-manager.commitSelectedFiles",
    "onCommand:git-manager.collapseAll",
    "onCommand:git-manager.moveFileToChangelist",
    "onCommand:git-manager.toggleFileSelection",
    "onCommand:git-manager.refresh",
    "onCommand:git-manager.selectAllFiles",
    "onCommand:git-manager.deselectAllFiles",
    "onCommand:git-manager.commitFromStatusBar",
    "onCommand:git-manager.stashFromStatusBar",
    "onCommand:git-manager.updateCommitMessage",
    "onCommand:git-manager.toggleAutoStage",
    "onCommand:git-manager.renameChangelist",
    "onCommand:git-manager.revertSelectedFiles",
    "onCommand:git-manager.revertFile",
    "onCommand:git-manager.revertChangelist",
    "onCommand:git-manager.stashSelectedFiles",
    "onCommand:git-manager.unstageFile",
    "onCommand:git-manager.untrackFile",
    "onCommand:git-manager.openDiff",
    "onCommand:git-manager.openFile",
    "onCommand:git-manager.clearPersistedState"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-manager.openCommitManager",
        "title": "Open Commit Manager",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.test",
        "title": "Test Extension",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.createChangelist",
        "title": "Create Changelist",
        "category": "JetBrains Commit Manager",
        "icon": "$(add)"
      },
      {
        "command": "git-manager.deleteChangelist",
        "title": "Delete Changelist",
        "category": "JetBrains Commit Manager",
        "icon": "$(trash)"
      },
      {
        "command": "git-manager.commitSelectedFiles",
        "title": "Commit Selected Files",
        "category": "JetBrains Commit Manager",
        "icon": "$(check)",
        "tooltip": "Select files to commit"
      },
      {
        "command": "git-manager.collapseAll",
        "title": "Collapse All",
        "category": "JetBrains Commit Manager",
        "icon": "$(collapse-all)"
      },
      {
        "command": "git-manager.moveFileToChangelist",
        "title": "Move File to Changelist",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.toggleFileSelection",
        "title": "Toggle File Selection",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.refresh",
        "title": "Refresh",
        "category": "JetBrains Commit Manager",
        "icon": "$(sync)"
      },
      {
        "command": "git-manager.selectAllFiles",
        "title": "Select All Files",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.deselectAllFiles",
        "title": "Deselect All Files",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.commitFromStatusBar",
        "title": "Commit from Status Bar",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.updateCommitMessage",
        "title": "Update Commit Message",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.toggleAutoStage",
        "title": "Toggle Auto-Stage Files",
        "category": "JetBrains Commit Manager",
        "icon": "$(sync)"
      },
      {
        "command": "git-manager.renameChangelist",
        "title": "Rename Changelist",
        "category": "JetBrains Commit Manager",
        "icon": "$(edit)"
      },
      {
        "command": "git-manager.revertSelectedFiles",
        "title": "Revert Selected Files",
        "category": "JetBrains Commit Manager",
        "icon": "$(discard)"
      },
      {
        "command": "git-manager.revertFile",
        "title": "Revert File",
        "category": "JetBrains Commit Manager",
        "icon": "$(discard)"
      },
      {
        "command": "git-manager.revertChangelist",
        "title": "Revert Changelist",
        "category": "JetBrains Commit Manager",
        "icon": "$(discard)"
      },
      {
        "command": "git-manager.unstageFile",
        "title": "Unstage File",
        "category": "JetBrains Commit Manager",
        "icon": "$(remove)"
      },
      {
        "command": "git-manager.untrackFile",
        "title": "Untrack File",
        "category": "JetBrains Commit Manager",
        "icon": "$(close)"
      },
      {
        "command": "git-manager.stashSelectedFiles",
        "title": "Stash Selected Files",
        "category": "JetBrains Commit Manager",
        "icon": "$(archive)",
        "tooltip": "Stash selected files"
      },
      {
        "command": "git-manager.openDiff",
        "title": "Open Diff",
        "category": "JetBrains Commit Manager"
      },
      {
        "command": "git-manager.clearPersistedState",
        "title": "Clear Persisted State",
        "category": "JetBrains Commit Manager",
        "icon": "$(trash)"
      },
      {
        "command": "git-manager.openFile",
        "title": "Open File",
        "category": "JetBrains Commit Manager"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-manager",
          "title": "Commit Manager",
          "icon": "resources/commit-manager-icon.svg"
        }
      ]
    },
    "views": {
      "git-manager": [
        {
          "id": "git-manager.changelists",
          "name": "Changelists",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-manager.commitSelectedFiles",
          "when": "view == git-manager.changelists && git-manager.hasSelectedFiles",
          "group": "navigation@1"
        },
        {
          "command": "git-manager.stashSelectedFiles",
          "when": "view == git-manager.changelists && git-manager.hasSelectedFiles",
          "group": "navigation@2"
        },
        {
          "command": "git-manager.refresh",
          "when": "view == git-manager.changelists",
          "group": "navigation@3"
        },
        {
          "command": "git-manager.revertSelectedFiles",
          "when": "view == git-manager.changelists",
          "group": "navigation@4"
        },
        {
          "command": "git-manager.createChangelist",
          "when": "view == git-manager.changelists",
          "group": "navigation@5"
        },
        {
          "when": "false",
          "command": "git-manager.collapseAll",
          "group": "navigation@6"
        }
      ],
      "view/item/context": [
        {
          "command": "git-manager.revertChangelist",
          "when": "view == git-manager.changelists && (viewItem == changelistNonEmpty || viewItem == defaultChangelistNonEmpty)",
          "group": "2_modification"
        },
        {
          "command": "git-manager.renameChangelist",
          "when": "view == git-manager.changelists && viewItem == changelist",
          "group": "1_modification"
        },
        {
          "command": "git-manager.deleteChangelist",
          "when": "view == git-manager.changelists && viewItem == changelist && viewItem != defaultChangelist",
          "group": "2_modification"
        },
        {
          "command": "git-manager.revertFile",
          "when": "view == git-manager.changelists && (viewItem == file || viewItem == stagedFile || viewItem == unstagedFile)",
          "group": "2_modification"
        },
        {
          "command": "git-manager.unstageFile",
          "when": "view == git-manager.changelists && viewItem == stagedFile",
          "group": "1_modification"
        },
        {
          "command": "git-manager.untrackFile",
          "when": "view == git-manager.changelists && (viewItem == stagedFile || viewItem == unstagedFile)",
          "group": "1_modification"
        },
        {
          "command": "git-manager.openFile",
          "when": "view == git-manager.changelists && (viewItem == file || viewItem == stagedFile || viewItem == unstagedFile)",
          "group": "navigation@2"
        }
      ]
    }
  },
  "configuration": {
    "title": "JetBrains Commit Manager",
    "properties": {
      "git-manager.autoStageFiles": {
        "type": "boolean",
        "default": true,
        "description": "Automatically stage modified files that are already tracked by Git (untracked files are not auto-staged)"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
